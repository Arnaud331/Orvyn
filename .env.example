############################################
# Web3 / Network
############################################

# HTTP RPC endpoint (Ganache/Anvil/geth/Infura/etc.)
WEB3_PROVIDER_URL=http://127.0.0.1:7545

# EVM chain id (Ganache default = 1337)
CHAIN_ID=1337

# Default gas price (in gwei) used by transactions
GAS_PRICE_GWEI=50

# Number of decimals for your ERC-20 token (18 is standard)
TOKEN_DECIMALS=18


############################################
# Solidity Compilation / Contract Build
############################################

# solc version to use
SOLC_VERSION=0.8.20

# Solidity source file and main contract name
CONTRACT_SOURCE_FILE=OrvynToken.sol
CONTRACT_NAME=OrvynToken

# Where the compiled JSON (ABI + bytecode) is written/read
COMPILED_CODE_PATH=abi/compiled_code.json

# Gas used when deploying the contract (estimate generously on local chains)
GAS_LIMIT_DEPLOY=5000000

# Initial token supply (raw units before applying TOKEN_DECIMALS)
TOKEN_SUPPLY=7000000


############################################
# Runtime Accounts / Deployed Addresses
############################################

# Admin/funding account that seeds users and sends initial grants
MAIN_ACCOUNT_ADDRESS=0xYourMainAccount
MAIN_ACCOUNT_PRIVATE_KEY=0xyour32bytehexprivatekey

# Deployed ERC-20 contract address (fill after deployment)
CONTRACT_ADDRESS=0xYourDeployedContract


############################################
# Transaction Defaults
############################################

# Gas limits per operation
GAS_LIMIT_BUY=210000
GAS_LIMIT_TRANSFER=500000
GAS_LIMIT_ETH_TRANSFER=21000

# Initial grants when creating a wallet
INITIAL_ETH_GRANT=1
INITIAL_TOKEN_GRANT=1000

# Convenience amount used by sample scripts (ORV, before decimals)
TRANSFER_AMOUNT=1000


############################################
# Discord Bot (Gateway)
############################################

# Bot token used by the Discord gateway client (discord.py)
DISCORD_TOKEN=your-bot-token

# Prefix for classic (non-slash) commands
DISCORD_COMMAND_PREFIX=!

# Channel where on-chain tx embeds are posted (used by UI views)
DISCORD_TX_CHANNEL_ID=1184586200531619951


############################################
# Discord OAuth / REST API
############################################

# Discord REST API base (v10 recommended)
DISCORD_API_BASE=https://discord.com/api/v10

# OAuth2 application credentials + redirect
DISCORD_CLIENT_ID=your_client_id
DISCORD_CLIENT_SECRET=your_client_secret
DISCORD_REDIRECT_URI=https://your-domain/callback

# Space-separated scopes for OAuth (URL-encoded in code)
DISCORD_OAUTH_SCOPES=identify guilds.join email

# Channel used by the OAuth webhook/notifications (e.g., “New login” embeds)
DISCORD_CHANNEL_ID=123456789012345678

# If your REST calls use a separate token from the gateway client, set it here.
# Otherwise, set DISCORD_BOT_TOKEN equal to DISCORD_TOKEN.
DISCORD_BOT_TOKEN=your_bot_token
DISCORD_TOKEN=your-bot-token
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false

############################################
# Data Files (local JSON storage)
############################################

USERS_FILE=data/users.json
REFERRAL_CODES_FILE=data/referral_codes.json
TRANSACTIONS_FILE=data/transactions.json
NOTIFICATIONS_FILE=data/notifications.json

# Default referral codes JSON (keep valid JSON in a single line)
REFERRAL_CODES_DEFAULT={"code":"11111111111111"}


############################################
# Local Testing Helpers (optional)
############################################

# Handy for stand-alone scripts that send ETH or test transfers
SENDER_ADDRESS=0xYourSenderAddressFromGanache
SENDER_PRIVATE_KEY=0xyour32bytehexprivatekey
RECIPIENT_ADDRESS=0xRecipientAddress


############################################
# Legacy/Alias (optional)
############################################

# Some older scripts may still read GANACHE_URL. Keep it in sync with WEB3_PROVIDER_URL.
GANACHE_URL=http://127.0.0.1:7545
